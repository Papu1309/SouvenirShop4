<Window x:Class="SouvenirShop4.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouvenirShop4"
        mc:Ignorable="d"
        Title="PaymentWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Оформление заказа" FontSize="18" FontWeight="Bold"
                  HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <DataGrid Grid.Row="1" Name="dgOrderItems" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Товар" Binding="{Binding Souvenir.Name}" Width="150"/>
                <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="80"/>
                <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="80"/>
                <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat={}{0:C}}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Name="txtTotal" FontSize="14" FontWeight="Bold" 
                  Margin="0,10,0,10" HorizontalAlignment="Right"/>

        <GroupBox Grid.Row="3" Header="Способ оплаты" Margin="0,10,0,10">
            <StackPanel>
                <RadioButton Name="rbCash" Content="Наличные" IsChecked="True" Margin="5"/>
                <RadioButton Name="rbCard" Content="Банковская карта" Margin="5"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Отмена" Click="CancelButton_Click" Margin="0,0,10,0" Padding="15,5"/>
            <Button Content="Подтвердить заказ" Click="ConfirmButton_Click" 
                   Background="#FF0080FF" Foreground="White" Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>
