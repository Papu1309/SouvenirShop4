<Window x:Class="SouvenirShop4.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouvenirShop4"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Сувенирная лавка" FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <TextBlock Grid.Row="1" Text="Логин:" Margin="0,0,0,5"/>
        <TextBox Grid.Row="1" Name="txtUsername" Height="25" Margin="0,20,0,5"/>

        <TextBlock Grid.Row="2" Text="Пароль:" Margin="0,0,0,5"/>
        <PasswordBox Grid.Row="2" Name="txtPassword" Height="25" Margin="0,20,0,5"/>

        <Button Grid.Row="3" Content="Войти" Click="LoginButton_Click" 
                Height="30" Background="#FF0080FF" Foreground="White" FontWeight="Bold"/>

        <TextBlock Grid.Row="4" Name="txtMessage" Foreground="Red" 
                   HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
