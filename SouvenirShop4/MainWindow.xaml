<Window x:Class="SouvenirShop4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SouvenirShop4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF0080FF" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Сувенирная лавка" 
                          Foreground="White" FontSize="20" FontWeight="Bold"/>
                <TextBlock Grid.Column="1" Name="txtUserInfo" 
                          Foreground="White" FontSize="14" Margin="0,0,20,0"/>
                <Button Grid.Column="2" Content="Выйти" Click="LogoutButton_Click"
                       Background="DarkRed" Foreground="White" Padding="10,5"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10" Name="mainTabControl">
            <!-- Вкладка каталога -->
            <TabItem Header="Каталог товаров">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Категория:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Name="cmbCategories" Width="200" Margin="0,0,10,0"
                                 DisplayMemberPath="CategoryName" 
                                 SelectionChanged="CategoryFilter_SelectionChanged"/>
                        <Button Content="Сбросить фильтр" Click="ResetFilter_Click" Margin="0,0,10,0"/>
                        <TextBox Name="txtSearch" Width="200" 
                                Margin="0,0,10,0" Padding="5" 
                                Text="Поиск по названию..."/>
                    </StackPanel>

                    <!-- Products Grid -->
                    <DataGrid Grid.Row="1" Name="dgSouvenirs" AutoGenerateColumns="False"
                             IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="200"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="250"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="В наличии" Binding="{Binding StockQuantity}" Width="80"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="120"/>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="В корзину" Click="AddToCart_Click" 
                                               Background="#FF0080FF" Foreground="White" Padding="5,2"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Cart Summary -->
                    <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10" Margin="0,10,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Выбрано товаров: " FontWeight="Bold"/>
                            <TextBlock Name="txtCartCount" Text="0" FontWeight="Bold" Margin="5,0,20,0"/>
                            <Button Content="Перейти к оплате" Click="CheckoutButton_Click" 
                                   Background="#FF0080FF" Foreground="White" Padding="10,5"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вкладка корзины -->
            <TabItem Header="Корзина">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <DataGrid Grid.Row="0" Name="dgCart" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Товар" Binding="{Binding Souvenir.Name}" Width="200"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding UnitPrice, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Quantity}" Width="100"/>
                            <DataGridTextColumn Header="Сумма" Binding="{Binding TotalPrice, StringFormat={}{0:C}}" Width="100"/>
                            <DataGridTemplateColumn Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Удалить" Click="RemoveFromCart_Click"
                                               Background="Red" Foreground="White"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Border Grid.Row="1" Background="#FFF0F0F0" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="-" Click="DecreaseQuantity_Click" 
                                   Width="30" Margin="0,0,10,0" Background="LightGray"/>
                            <TextBlock Grid.Column="1" Name="txtTotalAmount" FontSize="16" FontWeight="Bold"
                                      VerticalAlignment="Center"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="+" Click="IncreaseQuantity_Click" 
                                       Width="30" Margin="0,0,10,0" Background="LightGray"/>
                                <Button Content="Оформить заказ" Click="PlaceOrderButton_Click"
                                       Background="#FF0080FF" Foreground="White" Padding="15,5"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Вкладка управления товарами (только для админа) -->
            <TabItem Header="Управление товарами" Name="adminTab" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Панель управления -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Добавить товар" Click="AddSouvenir_Click" 
                               Background="Green" Foreground="White" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Редактировать товар" Click="EditSouvenir_Click" 
                               Background="Orange" Foreground="White" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Удалить товар" Click="DeleteSouvenir_Click" 
                               Background="Red" Foreground="White" Padding="10,5" Margin="0,0,10,0"/>
                        <Button Content="Обновить" Click="RefreshSouvenirs_Click" 
                               Background="#FF0080FF" Foreground="White" Padding="10,5"/>
                    </StackPanel>

                    <!-- Таблица товаров для админа -->
                    <DataGrid Grid.Row="1" Name="dgAdminSouvenirs" AutoGenerateColumns="False"
                             IsReadOnly="True" SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding SouvenirId}" Width="50"/>
                            <DataGridTextColumn Header="Название" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Описание" Binding="{Binding Description}" Width="200"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price, StringFormat={}{0:C}}" Width="80"/>
                            <DataGridTextColumn Header="В наличии" Binding="{Binding StockQuantity}" Width="80"/>
                            <DataGridTextColumn Header="Категория" Binding="{Binding Category.CategoryName}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Статистика -->
                    <Border Grid.Row="2" Background="#FFF0F0F0" Padding="10" Margin="0,10,0,0">
                        <TextBlock Name="txtAdminStats" FontWeight="Bold"/>
                    </Border>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
